            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            materialDesign:ButtonAssist.CornerRadius="25"
            HorizontalAlignment="Left" 
            Margin="205,374,0,0" 
            VerticalAlignment="Top" 
            Height="55" Width="100" 
            Visibility="Collapsed"
            Background="Red"
            Click="btnAddDrone_cencel_Click"/>

